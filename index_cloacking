    <!-- Bootstrap JS and Popper.js (for optional Bootstrap components) -->
    <script>
        // Retrieve the visitor count from localStorage or initialize it to 0
        let count = localStorage.getItem('visitorCount') ? parseInt(localStorage.getItem('visitorCount')) : 0;

        // Increment the visitor count
        count += 1;

        // Update the visitor count in localStorage
        localStorage.setItem('visitorCount', count);

        // Display the updated visitor count in the webpage with animation
        const visitorCountElement = document.getElementById('visitorCount');
        visitorCountElement.textContent = count;
        visitorCountElement.classList.add('count');
    </script>



    <!-- JavaScript to show and hide sections -->
    <script>
        function showSection(sectionId) {
            var sections = document.querySelectorAll('.section');
            sections.forEach(function (section) {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
        }

        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>

